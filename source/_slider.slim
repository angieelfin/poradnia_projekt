div id="carousel-hero" class="carousel slide" data-ride="carousel"
  / Indicators 
  ol class="carousel-indicators hero-indicators"
    li data-target="#carousel-hero" data-slide-to="0" class="active current-indicator"
    li data-target="#carousel-hero" class="current-indicator" data-slide-to="1"
    li data-target="#carousel-hero" class="current-indicator" data-slide-to="2"
    li data-target="#carousel-hero" class="current-indicator" data-slide-to="3"
